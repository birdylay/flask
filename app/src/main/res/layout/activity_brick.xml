<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:background="@color/bg_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BrickActivity">

    <android.support.v7.widget.CardView
        android:layout_width="275dp"
        android:layout_height="215dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="@color/name_tag_bg_color">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/avata" />
        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/name_size"
                android:textColor="@color/main_name_color"
                android:textStyle="bold"
                android:text="@string/default_name"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/more_info_size"
                android:text="@string/default_more_info"
                android:layout_gravity="center"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@color/test_bg"
            card_view:cardCornerRadius="2dp"
            android:id="@+id/test_card_clickable"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_library_books_white_48dp"
                    android:layout_gravity="center|left" />
                <TextView
                    android:id="@+id/myTests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scores_text"
                    android:textColor="@color/main_card_text_color"
                    android:textAllCaps="true"
                    android:textSize="@dimen/main_card_text_size"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@color/question_bg"
            card_view:cardCornerRadius="2dp"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="7dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/questions_card">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_help_outline_white_48dp"
                    android:layout_gravity="center|left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_text"
                    android:textColor="@color/main_card_text_color"
                    android:textSize="@dimen/main_card_text_size"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@color/reminders_bg"
            card_view:cardCornerRadius="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:id="@+id/reminder_card">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_info_outline_white_48dp"
                    android:layout_gravity="center|left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_text"
                    android:textColor="@color/main_card_text_color"
                    android:textSize="@dimen/main_card_text_size"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@color/dates_bg"
            card_view:cardCornerRadius="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="7dp"
            android:id="@+id/date_card">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_date_range_white_48dp"
                    android:layout_gravity="center|left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dates_text"
                    android:textColor="@color/main_card_text_color"
                    android:textSize="@dimen/main_card_text_size"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@color/account_bg"
            card_view:cardCornerRadius="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:id="@+id/account_card">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_supervisor_account_white_48dp"
                    android:layout_gravity="center|left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_text"
                    android:textColor="@color/main_card_text_color"
                    android:textSize="@dimen/main_card_text_size"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@color/settings_bg"
            card_view:cardCornerRadius="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="7dp"
            android:id="@+id/settings_card">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_settings_white_48dp"
                    android:layout_gravity="center|left"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_text"
                    android:textColor="@color/main_card_text_color"
                    android:textSize="@dimen/main_card_text_size"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>
